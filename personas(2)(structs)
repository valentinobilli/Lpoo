#include <iostream>
using namespace std;

struct persona{
	string nombre;
	int dn;
	int mn;
	int an;
};

void ingreso(persona _persona[8], int i){
	string nwn;
	int nd, nm, na;
	for(i=0 ; i<8 ; i++){
		cout << "Ingrese el nombre de la " << i+1 << " persona: ";
		cin >> nwn;
		cout << "-Dia de nac: ";
		cin >> nd;
		cout << "-Mes de nac: ";
		cin >> nm;
		cout << "-Anio de nac: ";
		cin >> na;
		
		_persona[i] = {nwn, nd, nm, na};
	}
	system("cls");
}

void mostrar(persona _persona[8], int i, int mes){
	cout << "Las peronas que cumplen en el mes " << mes << " son:" << endl;
	for(i=0 ; i<8 ; i++){
		if(_persona[i].mn == mes){
			cout << _persona[i].nombre << endl;
		}
	}
	system("pause");
	system("cls");
}

int main(){
	int i, mes;
	persona _persona[8];
	ingreso(_persona, i);
	
	do{
		if(mes > 12) cout << "No existe un mes numero " << mes << ". Ingrese uno valido." << endl;
		cout << "Ingrese un numero de mes a buscar(0 para finalizar la busqueda): ";
		cin >> mes;
		
		if(mes <= 12) mostrar(_persona, i, mes);
	}while(mes!=0);
}
